{
    "name": "setup_deploy",
    "steps": [
        {
            "step": "scDeploy",
            "comment": "deploy vesting contract",
            "txId": "deploy_vesting#1",
            "tx": {
                "from": "address:owner",
                "contractCode": "file:../../output/vesting.wasm",
                "arguments": [
                    {
                        "token_identifier": "str:TOK-0001"
                    },
                    {
                        "multisig_address": "address:multisig"
                    }
                ],
                "gasLimit": "5,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "status": "0",
                "gas": "*"
            }
        },
        {
            "step": "scQuery",
            "comment": "assert token_identifier",
            "txId": "deploy_vesting#2",
            "tx": {
                "to": "sc:vesting",
                "function": "getTokenIdentifier"
            },
            "expect": {
                "out": [
                    "str:TOK-0001"
                ],
                "status": "0"
            }
        },
        {
            "step": "scQuery",
            "comment": "assert multisig_address",
            "txId": "deploy_vesting#3",
            "tx": {
                "to": "sc:vesting",
                "function": "getMultisigAddress"
            },
            "expect": {
                "out": [
                    "address:multisig"
                ],
                "status": "0"
            }
        }
    ]
}
